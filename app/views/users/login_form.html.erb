<div class="container">
  <div class="row justify-content-center">

    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-xl-8">
      <h4 class="mt-5 text-center">Login</h4>
      <div class="row mt-4">
        <div class="col-md-6 mb-4">
          <%= form_with url: login_path, method: :get do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Email:", class: "form-label" %>
              <%= f.text_field :email, class: "form-control", required: true %>
            </div>
            <div class="mb-3">
              <%= f.label :password, "Password:", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>
            <div class="d-grid">
              <%= f.submit "Log In", class: "btn custom-btn1", required: true %>
            </div>
          <% end %>
        </div>

        <div class="col-md-6 mb-4">
          <div class="d-flex flex-column justify-content-center h-100">
            <%= link_to "Login with Github", "https://github.com/login/oauth/authorize?client_id=#{Rails.application.credentials.github[:client_id]}&scope=repo", data: { turbo: false }, class: "btn custom-btn1 btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
