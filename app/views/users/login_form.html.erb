<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xl-6">
      <h4 class="mt-5 text-center"> Login </h4>

      <%= form_with url: login_path, method: :get, class: "mt-4" do |f| %>
       <div class="mb-2">
          <%= f.label :username, "Username:", class: "form-label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="mb-2">
        <%= f.label :email, "Email:", class: "form-label"  %>
        <%= f.text_field :email, class: "form-control"  %>
        </div>
        <div class="mb-2">
        <%= f.label :password, "Password:", class: "form-label"  %>
        <%= f.password_field :password, class: "form-control"  %>
        </div>
        <div class="mb-2">
        <%= f.label :password_confirmation, "Password Confirmation:", class: "form-label"  %>
        <%= f.password_field :password_confirmation, class: "form-control"  %>
         </div>
        <div class="d-grid">
        <%= f.submit "Log In", class: "btn custom-btn1 mr-2" %>
        </div>
      <% end %>
  </div>
</div>